@model CursosModel
@Html.ValidationSummary(false, "", new { @class = "text-danger" })
@{
    ViewData["Title"] = "Cursos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>W3.CSS Template</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Karma">
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body, h1, h2, h3, h4, h5, h6 {
            font-family: "Karma", sans-serif
        }

        .w3-bar-block .w3-bar-item {
            padding: 20px
        }
        .btn {
            border: none;
            background-color: inherit;
            padding: 14px 28px;
            font-size: 16px;
            cursor: pointer;
            display: inline-block;
        }

        .btn:hover {
                background: #eee;
            }


        .VideoJuegos {
            color: #6a5acd;
        }

        .Cocina {
            color: #6a5acd;
        }
        .button {
            background-color: #6a5acd;
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
        }
     
    </style>
</head>
<body style="background-color:#6a5acd;">
    <div class="card">
        <div class="card-header">
            <div class="w3-main">
                <div class="w3-white w3-xlarge" style="max-width:1200px;margin:auto">
                    <div class="w3-center w3-padding-16">Cursos Disponibles</div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="w3-main w3-content w3-padding" style="max-width:1200px;margin-top:100px">
                <div class="w3-row-padding w3-padding-16 w3-center" id="cursos">
                    <div class="w3-quarter">
                        <div class="card" style="width: 13rem;">
                            <img class="card-img-top" src="https://logos-world.net/wp-content/uploads/2021/11/Unity-New-Logo.png" alt="Card image cap" style="width:100%; height:150px">
                            <div class="card-body">
                                <h5 class="card-title">Desarrollo Videojuegos</h5>
                                <p class="card-text">Aprende a utilizar la Herramienta de Unity</p>
                                <a class="btn VideoJuegos" asp-area="" asp-controller="Cursos" asp-action="ContenidoCursos">Empezar</a>
                            </div>
                        </div>
                    </div>
                    <div class="w3-quarter">
                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src="https://cdn.vox-cdn.com/thumbor/9qN-DmdwZE__GqwuoJIinjUXzmk=/0x0:960x646/1200x900/filters:focal(404x247:556x399)/cdn.vox-cdn.com/uploads/chorus_image/image/63084260/foodlife_2.0.jpg" alt="Card image cap" style="width:100%; height:200px">
                            <div class="card-body">
                                <h5 class="card-title">Aprende a Cocinar</h5>
                                <p class="card-text">Metodos y Recetas</p>
                                <a class="btn Cocina" asp-area="" asp-controller="Cursos" asp-action="ContenidoCursos">Empezar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
            <div class="card-footer">
                <form asp-action="Guardar" asp-controller="Mantenedor" method="post">
                    <div class="form-group">
                        <label for="Nombre">Nombra tu Curso:</label>
                        <input asp-for="NombreCurso" type="text" class="form-control" id="nombreCurso">
                    </div>
                    <div class="form-group">
                        <label for="Ciudad">Descripcion Curso:</label>
                        <input asp-for="Descripcion" type="text" class="form-control" id="DescripcionCurso">
                    </div>
                    <button type="submit" class="button">Crear Curso</button>
                </form>
            </div>
        </div>
   
</body>

