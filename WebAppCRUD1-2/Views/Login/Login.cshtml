@model UserModel
@Html.ValidationSummary(false, "", new { @class = "text-danger" })
@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/64d58efce2.js"
            crossorigin="anonymous"></script>
    <link href="~/css/style1.css" rel="stylesheet" />
    <link rel="icon" href="https://nuevoleon.travel/wp-content/uploads/2019/11/ImagoNLE-700x582.png">
    <title>Sign in & Sign up Form</title>
</head>

<body>
    <div class="forms-container">
        <div class="signin-signup">
            <form action="#" class="sign-in-form">
                <h2 class="title">Iniciar Sesion</h2>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input asp-for="email" class="form-control" id="email" type="text" placeholder="Email" />
                </div>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    <input asp-for="passw" class="form-control" id="passw" type="password" placeholder="Contraseña" />
                </div>
                <button asp-action="Validar" asp-controller="Mantenedor" type="submit" class="btn btn-primary">Log in</button>
                <button asp-action="valiadmin" asp-controller="Mantenedor" type="submit" class="btn btn-primary">¿Eres admin?</button>
                <p class="social-text"> Inicia Sesion Con Tus Redes Sociales</p>
                <div class="social-media">
                    <a href="#" class="social-icon">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-google"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                </div>
            </form>

            <form action="#" class="sign-up-form">
                <h2 class="title">Registrate</h2>
                <div class="input-field">
                    <i class="fas fa-id-badge "></i>
                    <input asp-for="nombre" type="text" class="form-control" id="nombre" placeholder="Nombre">
                </div>
                <div class="input-field">
                    <i class="fas fa-id-badge "></i>
                    <input asp-for="apellidop" type="text" class="form-control" id="apellidop" placeholder="Apellido Paterno">
                </div>

                <div class="input-field">
                    <i class="fas fa-id-badge "></i>
                    <input asp-for="apellidom" type="text" class="form-control" id="apellidom" placeholder="Apellido Materno">
                </div>

                <div class="input-field">
                    <i class="fas fa-id-badge "></i>
                    <input asp-for="edad" type="text" class="form-control" id="edad" placeholder="edad">
                </div>

                <div class="input-field">
                    <i class="fas fa-envelope"></i>
                    <input asp-for="email" type="text" class="form-control" id="email" placeholder="email">
                </div>

                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    <input asp-for="passw" type="password" class="form-control" id="passw" placeholder="Contraseña">
                </div>
                <button asp-action="Guardar" asp-controller="Mantenedor" type="submit" class="btn btn-primary">Guardar</button>
                <p class="social-text">Regístrate Con Tus Redes Sociales</p>
                <div class="social-media">
                    <a href="#" class="social-icon">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-google"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>
    <div class="panels-container">
        <div class="panel left-panel">
            <div class="content">
                <h3>¿Nuevo Aqui?</h3>
                <p>
                    Únete a Project+ para obtener informacion y recursos para asi  aprender algo totalmente nuevo. !Animate a Aprender!
                </p>
                <button class="btn transparent" id="sign-up-btn">
                    Regístrate
                </button>
            </div>
            <img src="" class="image" alt="" />
        </div>
        <div class="panel right-panel">
            <div class="content">
                <h3>¿Ya Tienes Cuenta?</h3>
                <p>
                </p>
                <button class="btn transparent" id="sign-in-btn">
                    Inicia Sesión
                </button>
            </div>
            <img src="img/register.svg" class="image" alt="" />
        </div>
    </div>
    <script src="~/js/app.js"></script>
</body>
</html>
